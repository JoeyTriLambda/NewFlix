<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_player"
    android:background="@color/mocie_item_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/collection_button"
                android:background="@drawable/round_corner_back_button"
                android:focusable="true"
                android:nextFocusRight="@+id/series_button"
                android:nextFocusUp="@+id/toolbar"
                android:nextFocusDown="@+id/recyclerview"
                android:clickable="true"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/label_collection_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Collection"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/watchlist_button"
                android:background="@drawable/round_corner_back_button"
                android:focusable="true"
                android:nextFocusLeft="@+id/movies_button"
                android:nextFocusUp="@+id/toolbar"
                android:nextFocusDown="@+id/recyclerview"
                android:clickable="true"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/label_watchlist_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Watchlist"/>
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                app:civ_border_color="@color/transparent"
                app:civ_border_width="2dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:scrollbars="none"
            android:nextFocusUp="@+id/toolbar"
            android:nextFocusDown="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            app:mainLayoutId="@layout/layout_recyclerview_verticalscroll"
            app:recyclerClipToPadding="false"
            app:scrollbarStyle="insideInset"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:indeterminate="true"
            android:layout_centerInParent="true"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/progress_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.github.ybq.android.spinkit.SpinKitView
            android:layout_gravity="center_horizontal"
            android:id="@+id/loader"
            android:visibility="visible"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:SpinKit_Color="@color/white"
            style="@style/SpinKitView.Large.FoldingCube"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/transparent"
            android:nextFocusLeft="@+id/listview"
            android:nextFocusDown="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:elevation="0dp"/>
    </FrameLayout>
</RelativeLayout>
