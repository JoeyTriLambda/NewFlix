<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_player"
    android:background="@color/mocie_item_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/movies_button"
                    android:background="@drawable/round_corner_back_button"
                    android:focusable="true"
                    android:nextFocusRight="@+id/series_button"
                    android:nextFocusUp="@+id/toolbar"
                    android:nextFocusDown="@+id/recyclerview_cast"
                    android:clickable="true"
                    android:layout_width="146dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/label_movies_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Movies"/>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/series_button"
                    android:background="@drawable/round_corner_back_button"
                    android:focusable="true"
                    android:nextFocusLeft="@+id/movies_button"
                    android:nextFocusUp="@+id/toolbar"
                    android:nextFocusDown="@+id/recyclerview_cast"
                    android:clickable="true"
                    android:layout_width="135dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/label_series_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Series"/>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/sort_button"
                    android:background="@drawable/round_corner_back_button"
                    android:focusable="true"
                    android:nextFocusLeft="@+id/movies_button"
                    android:nextFocusUp="@+id/toolbar"
                    android:nextFocusDown="@+id/recyclerview_cast"
                    android:clickable="true"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:id="@+id/sort_icon_view_cast"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/swap_order"
                        app:tint="@color/black"/>
                </RelativeLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:id="@+id/cast_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Cast Member"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_cast"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="7dp"
                    app:civ_border_color="@color/transparent"
                    app:civ_border_width="2dp"/>
            </LinearLayout>
        </ScrollView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_cast"
            android:scrollbars="none"
            android:nextFocusUp="@+id/toolbar"
            android:nextFocusDown="@+id/recyclerview_cast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            app:mainLayoutId="@layout/layout_recyclerview_verticalscroll"
            app:recyclerClipToPadding="false"
            app:scrollbarStyle="insideInset"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:indeterminate="true"
            android:layout_centerInParent="true"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/toolbar_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/transparent"
            android:nextFocusLeft="@+id/listview"
            android:nextFocusDown="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:elevation="0dp"/>
    </FrameLayout>
</RelativeLayout>
