<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/poster"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <FrameLayout
            android:background="@drawable/gradient_cicular_details"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:layout_weight="0.35">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="left"
                    android:id="@+id/movie_title"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:maxLines="2"/>
                <flix.com.vision.customviews.CustomImageView
                    android:id="@+id/title_logo"
                    android:visibility="gone"
                    android:layout_width="175dp"
                    android:layout_height="100dp"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:textSize="13sp"
                    android:id="@+id/info_text_view"
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/accent"
                    android:id="@+id/last_episode_text_view"
                    android:focusable="false"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="@font/product_sans_egular"/>
            </LinearLayout>
            <TextView
                android:textSize="15sp"
                android:id="@+id/season_info_text_view"
                android:focusable="false"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="30dp"
                android:maxLines="4"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_seasons"
                android:focusable="true"
                android:visibility="visible"
                android:scrollbars="none"
                android:nextFocusRight="@+id/recyclerview_episodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="40dp"/>
        </LinearLayout>
        <View
            android:background="@color/white"
            android:focusable="false"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="center_vertical"
                android:id="@+id/recyclerview_episodes"
                android:focusable="true"
                android:visibility="visible"
                android:scrollbars="vertical"
                android:nextFocusLeft="@+id/recyclerview_seasons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
