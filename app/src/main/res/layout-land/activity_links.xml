<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/background_image"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <FrameLayout
            android:background="@drawable/gradient_cicular_details"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progress_links"
            android:focusable="false"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/white"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <LinearLayout
            android:orientation="horizontal"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <ScrollView
                android:id="@+id/left_panel"
                android:background="#00000000"
                android:focusable="false"
                android:visibility="visible"
                android:scrollbars="none"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:ellipsize="end"
                            android:id="@+id/episode_title"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:maxWidth="200dp"
                            android:text=""
                            android:maxLines="1"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@color/accent"
                            android:ellipsize="end"
                            android:layout_gravity="center"
                            android:id="@+id/links_act_page_title"
                            android:background="@drawable/season_item_border_selected"
                            android:paddingLeft="4dp"
                            android:paddingTop="1dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="..."
                            android:textAlignment="center"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@color/rd_color"
                            android:ellipsize="end"
                            android:layout_gravity="center"
                            android:id="@+id/links_act_page_title_rd"
                            android:background="@drawable/season_item_border_selected_rd"
                            android:paddingLeft="4dp"
                            android:paddingTop="1dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="1dp"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="..."
                            android:maxLines="1"
                            android:textAlignment="center"/>
                        <com.github.ybq.android.spinkit.SpinKitView
                            android:layout_gravity="center"
                            android:id="@+id/spin_kit_2"
                            android:visibility="visible"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            app:SpinKit_Color="@color/accent"
                            style="@style/SpinKitView.Large.Circle"/>
                        <RelativeLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:id="@+id/reload_button_links_act"
                            android:background="@drawable/round_corner_movie_detail_circle"
                            android:focusable="true"
                            android:nextFocusRight="@+id/movie_lin"
                            android:clickable="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:id="@+id/links_act__settings_text"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/refresh_button_imageview"
                                android:focusable="false"
                                android:clickable="false"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_action_refresh"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:id="@+id/settings_button_links_act"
                            android:background="@drawable/round_corner_movie_detail_circle"
                            android:focusable="true"
                            android:nextFocusRight="@+id/movie_lin"
                            android:clickable="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:id="@+id/links_act_reload_text"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/settings_button_imageview"
                                android:focusable="false"
                                android:clickable="false"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/settings_icon_new"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_gravity="center"
                            android:id="@+id/stop_rd_fetch_button"
                            android:background="?android:attr/selectableItemBackground"
                            android:focusable="true"
                            android:visibility="gone"
                            android:nextFocusDown="@+id/recyclerview_categories"
                            android:clickable="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="40dp"
                                android:layout_height="40dp">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_stop"
                                    android:layout_centerInParent="true"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:id="@+id/mini_poster"
                            android:background="@color/colorPrimaryDarklight"
                            android:focusable="false"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:textSize="11sp"
                        android:textStyle="italic"
                        android:id="@+id/aired_on"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:maxLines="1"/>
                    <View
                        android:layout_gravity="center"
                        android:background="@color/accent"
                        android:layout_width="150dp"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/plot_text"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text=""/>
                </LinearLayout>
            </ScrollView>
            <View
                android:layout_gravity="center"
                android:background="@color/accent"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="30dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:focusable="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listview_links"
                    android:focusable="true"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadeScrollbars="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <fragment
        android:id="@+id/castMiniController"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        class="com.google.android.gms.cast.framework.media.widget.MiniControllerFragment"/>
</RelativeLayout>
