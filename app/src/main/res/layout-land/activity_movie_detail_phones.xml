<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/main_view"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/frame_layout_background"
                android:background="@drawable/gradient_dark"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.85"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.bosphere.fadingedgelayout.FadingEdgeLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.9"
                        app:fel_edge="left|bottom"
                        app:fel_size_bottom="80dp"
                        app:fel_size_left="0dp"
                        app:fel_size_right="80dp"
                        app:fel_size_top="80dp">
                        <RelativeLayout
                            android:id="@+id/poster_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/big_poster"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:translationX="180.5dp"/>
                            <FrameLayout
                                android:background="@drawable/gradient_details_page"
                                android:focusable="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </RelativeLayout>
                    </com.bosphere.fadingedgelayout.FadingEdgeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"/>
                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:id="@+id/scrolview_main"
                android:background="#00000000"
                android:focusable="true"
                android:scrollbars="none"
                android:nextFocusUp="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="45dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="0.45">
                            <RelativeLayout
                                android:gravity="bottom|left"
                                android:layout_gravity="bottom|left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <me.grantland.widget.AutofitTextView
                                    android:textSize="70dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:ellipsize="end"
                                    android:gravity="bottom"
                                    android:layout_gravity="bottom|left"
                                    android:id="@+id/movie_title"
                                    android:focusable="false"
                                    android:visibility="visible"
                                    android:layout_width="263dp"
                                    android:layout_height="150dp"
                                    android:text="Title"
                                    android:maxLines="2"/>
                                <ImageView
                                    android:id="@+id/title_logo"
                                    android:visibility="gone"
                                    android:layout_width="350dp"
                                    android:layout_height="200dp"
                                    android:scaleType="fitEnd"
                                    android:layout_alignParentStart="true"/>
                            </RelativeLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:focusable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp">
                                <TextView
                                    android:textSize="12sp"
                                    android:textColor="@color/accent"
                                    android:id="@+id/text_view_rating"
                                    android:background="@drawable/round_corner_rating"
                                    android:paddingLeft="4dp"
                                    android:paddingRight="4dp"
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="0.5dp"
                                    android:text="12"
                                    android:maxLines="1"
                                    android:fontFamily="@font/product_sans_bold"/>
                                <TextView
                                    android:textSize="12sp"
                                    android:ellipsize="end"
                                    android:id="@+id/info"
                                    android:focusable="false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:maxWidth="260dp"
                                    android:text="2017 12min"
                                    android:maxLines="1"/>
                                <TextView
                                    android:textSize="12sp"
                                    android:textColor="@color/accent"
                                    android:gravity="center"
                                    android:id="@+id/type_text_view"
                                    android:focusable="false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:maxLines="1"/>
                                <TextView
                                    android:textSize="14sp"
                                    android:textColor="@color/rd_color"
                                    android:gravity="center"
                                    android:id="@+id/type_text_providers"
                                    android:focusable="false"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="2dp"
                                    android:text="  HD"
                                    android:maxLines="1"
                                    android:translationY="-1dp"
                                    android:fontFamily="@font/product_sans_bold"/>
                                <ImageButton
                                    android:background="@drawable/imdb"
                                    android:focusable="false"
                                    android:clickable="false"
                                    android:layout_width="30dp"
                                    android:layout_height="15dp"
                                    android:layout_marginLeft="10dp"/>
                                <TextView
                                    android:textSize="12sp"
                                    android:id="@+id/imdb_text"
                                    android:focusable="false"
                                    android:clickable="false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="1dp"
                                    android:text="N/A"
                                    android:fontFamily="@font/product_sans_bold"/>
                            </LinearLayout>
                            <io.github.giangpham96.expandable_textview.ExpandableTextView
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:ellipsize="end"
                                android:id="@+id/plot"
                                android:focusable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="@string/dcma"
                                android:shadowColor="@color/black"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2"
                                app:expandAction="More"
                                app:expandActionColor="@color/accent"
                                app:limitedMaxLines="3"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:id="@+id/crew_container"
                                android:focusable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:focusable="false"
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:textSize="12sp"
                                        android:id="@+id/director_label_textview"
                                        android:focusable="false"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="DIRECTOR"/>
                                    <TextView
                                        android:textSize="12sp"
                                        android:id="@+id/writers_label"
                                        android:focusable="false"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text="WRITTEN BY"/>
                                    <TextView
                                        android:textSize="12sp"
                                        android:id="@+id/season_label_textview"
                                        android:focusable="false"
                                        android:visibility="gone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text="CREATED BY"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:focusable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:textSize="12sp"
                                        android:id="@+id/director_textview"
                                        android:focusable="false"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Director"
                                        android:maxLines="1"/>
                                    <TextView
                                        android:textSize="12sp"
                                        android:id="@+id/cast_textview"
                                        android:focusable="false"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text="N/A"
                                        android:maxLines="1"/>
                                    <TextView
                                        android:textSize="12sp"
                                        android:id="@+id/total_seasons"
                                        android:focusable="false"
                                        android:visibility="gone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text=""
                                        android:maxLines="1"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:id="@+id/progress_layout"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="10dp">
                                <ProgressBar
                                    android:layout_gravity="center"
                                    android:id="@+id/progress_bar"
                                    android:background="@color/gray"
                                    android:layout_width="120dp"
                                    android:layout_height="2dp"
                                    android:progressDrawable="@drawable/progress_drawable"
                                    style="?android:attr/progressBarStyleHorizontal"/>
                                <TextView
                                    android:textSize="12sp"
                                    android:id="@+id/progress_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="N/A"
                                    android:maxLines="1"
                                    android:shadowColor="@color/black"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="2"
                                    android:fontFamily="@font/product_sans_egular"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="35dp">
                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:id="@+id/movie_lin"
                                    android:background="@drawable/round_corner_movie_detail_rect_button_light"
                                    android:paddingTop="6dp"
                                    android:paddingRight="6dp"
                                    android:paddingBottom="6dp"
                                    android:focusable="true"
                                    android:nextFocusLeft="@+id/add_favorites"
                                    android:nextFocusUp="@+id/search_button_movies_page"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:minWidth="120dp">
                                    <ImageView
                                        android:layout_gravity="center"
                                        android:id="@+id/button_play_image"
                                        android:focusable="false"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="2dp"
                                        android:src="@drawable/ic_play"
                                        app:tint="@color/black"/>
                                    <TextView
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:id="@+id/play_button_label"
                                        android:paddingRight="20dp"
                                        android:focusable="false"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="PLAY"
                                        android:maxLines="1"/>
                                </LinearLayout>
                                <RelativeLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:id="@+id/trailer_lin"
                                    android:background="@drawable/round_corner_movie_detail_rect_button_light"
                                    android:focusable="true"
                                    android:nextFocusUp="@+id/search_button_movies_page"
                                    android:layout_width="120dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp">
                                    <TextView
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:gravity="center"
                                        android:layout_gravity="center_horizontal"
                                        android:id="@+id/trailer_button_label"
                                        android:focusable="false"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="TRAILER"
                                        android:maxLines="1"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:orientation="horizontal"
                                    android:id="@+id/add_favorites"
                                    android:background="@drawable/round_corner_movie_detail_circle"
                                    android:padding="6dp"
                                    android:focusable="true"
                                    android:nextFocusRight="@+id/mark_as_watched"
                                    android:nextFocusUp="@+id/search_button_movies_page"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="20dp">
                                    <ImageView
                                        android:layout_gravity="center"
                                        android:id="@+id/button_favorite_image"
                                        android:focusable="false"
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="2dp"
                                        android:src="@drawable/ic_bookmark"
                                        android:layout_centerHorizontal="true"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:orientation="horizontal"
                                    android:id="@+id/mark_as_watched"
                                    android:background="@drawable/round_corner_movie_detail_circle_phone"
                                    android:padding="6dp"
                                    android:focusable="true"
                                    android:visibility="gone"
                                    android:nextFocusLeft="@+id/add_favorites"
                                    android:nextFocusRight="@+id/movie_lin"
                                    android:nextFocusUp="@+id/search_button_movies_page"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp">
                                    <ImageView
                                        android:layout_gravity="center"
                                        android:id="@+id/mark_as_watched_imageview"
                                        android:focusable="false"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="2dp"
                                        android:src="@drawable/marked_check"
                                        android:layout_centerInParent="true"
                                        android:alpha="0.7"
                                        app:tint="@color/black"/>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <com.bosphere.fadingedgelayout.FadingEdgeLayout
                            android:id="@+id/fading_edge_layout"
                            android:visibility="invisible"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="0.55"
                            app:fel_edge="left|bottom"
                            app:fel_size_bottom="80dp"
                            app:fel_size_left="80dp"
                            app:fel_size_right="80dp"
                            app:fel_size_top="80dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/big_poster_"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </RelativeLayout>
                        </com.bosphere.fadingedgelayout.FadingEdgeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="70dp">
                        <TextView
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/cast_label"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="CAST"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_cast"
                            android:focusable="true"
                            android:visibility="visible"
                            android:scrollbars="none"
                            android:nextFocusUp="@+id/add_favorites"
                            android:nextFocusDown="@+id/recyclerview_from_cast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-15dp"
                            android:layout_marginTop="6dp"/>
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/collection_label"
                            android:focusable="false"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="COLLECTION"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_collection"
                            android:focusable="true"
                            android:visibility="gone"
                            android:scrollbars="none"
                            android:nextFocusUp="@+id/movie_lin"
                            android:nextFocusDown="@+id/recyclerview_from_cast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-15dp"
                            android:layout_marginTop="6dp"/>
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/from_director_textview"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_from_director"
                            android:focusable="true"
                            android:visibility="visible"
                            android:scrollbars="none"
                            android:nextFocusUp="@+id/recyclerview_cast"
                            android:nextFocusDown="@+id/recyclerview_similar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/more_from_textview"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_from_cast"
                            android:focusable="true"
                            android:visibility="visible"
                            android:scrollbars="none"
                            android:nextFocusUp="@+id/recyclerview_cast"
                            android:nextFocusDown="@+id/recyclerview_similar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/similar_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="YOU MAY ALSO LIKE"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_similar"
                            android:background="@null"
                            android:focusable="true"
                            android:visibility="visible"
                            android:scrollbars="none"
                            android:nextFocusUp="@+id/recyclerview_from_cast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:gravity="center_horizontal"
                android:id="@+id/loader"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_centerInParent="true">
                <com.github.ybq.android.spinkit.SpinKitView
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:indeterminate="true"
                    app:SpinKit_Color="@color/white"
                    style="@style/SpinKitView.Large.Circle"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/transparent"
            android:focusable="true"
            android:visibility="visible"
            android:nextFocusLeft="@+id/movie_lin"
            android:nextFocusRight="@+id/movie_lin"
            android:nextFocusDown="@+id/movie_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
        <flix.com.vision.materialsearchview.MaterialSearchView
            android:id="@+id/search_view"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MaterialSearchViewStyle"/>
    </FrameLayout>
    <fragment
        android:layout_gravity="bottom"
        android:id="@+id/castMiniController"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.google.android.gms.cast.framework.media.widget.MiniControllerFragment"/>
</FrameLayout>
