<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_player"
    android:background="@color/mocie_item_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@color/black"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/type_button"
                android:background="@drawable/round_corner_back_button"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="30dp"
                android:text="Movies"
                android:drawableLeft="@drawable/ic_expand"
                android:drawablePadding="22dp"
                android:fontFamily="@font/product_sans_bold"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/accent"
                android:layout_gravity="bottom"
                android:id="@+id/provider_network_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Network "
                android:fontFamily="@font/product_sans_bold"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/network_button"
                android:background="@drawable/round_corner_back_button"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:text="All"
                android:drawableLeft="@drawable/ic_expand"
                android:drawablePadding="22dp"
                android:fontFamily="@font/product_sans_bold"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/accent"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Genres "
                android:fontFamily="@font/product_sans_bold"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/genres_button"
                android:background="@drawable/round_corner_back_button"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:text="All"
                android:drawableLeft="@drawable/ic_expand"
                android:drawablePadding="22dp"
                android:fontFamily="@font/product_sans_bold"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/accent"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Year "
                android:fontFamily="@font/product_sans_bold"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/year_button"
                android:background="@drawable/round_corner_back_button"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:minWidth="120dp"
                android:text="All"
                android:drawableLeft="@drawable/ic_expand"
                android:drawablePadding="22dp"
                android:fontFamily="@font/product_sans_bold"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/accent"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Sort By "
                android:fontFamily="@font/product_sans_bold"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/sort_by_button"
                android:background="@drawable/round_corner_back_button"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:text="Popularity"
                android:drawableLeft="@drawable/ic_expand"
                android:drawablePadding="22dp"
                android:fontFamily="@font/product_sans_bold"/>
        </LinearLayout>
        <View
            android:layout_gravity="center_horizontal"
            android:background="@color/accent"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
        <com.malinskiy.superrecyclerview.SuperRecyclerView
            android:id="@+id/recyclerview_cast"
            android:scrollbars="vertical"
            android:nextFocusUp="@+id/toolbar"
            android:nextFocusDown="@+id/recyclerview_cast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            app:layout_moreProgress="@layout/view_more_progress"
            app:recyclerClipToPadding="false"
            app:scrollbarStyle="insideInset"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:indeterminate="true"
            android:layout_centerInParent="true"/>
    </LinearLayout>
</RelativeLayout>
