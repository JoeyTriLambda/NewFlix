<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:minHeight="1500dp">
    <RelativeLayout
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:background="@color/black"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.75"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/dialog_main_content"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_centerInParent="true">
            <TextView
                android:textSize="33sp"
                android:layout_gravity="center"
                android:id="@+id/dialog_title"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAlignment="center"/>
            <TextView
                android:textSize="20sp"
                android:layout_gravity="center"
                android:id="@+id/dialog_message"
                android:focusable="false"
                android:scrollbars="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textIsSelectable="true"
                android:textAlignment="center"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/horizontal_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:id="@+id/dialog_button_rel1"
                    android:background="@drawable/round_corner_back_button"
                    android:focusable="true"
                    android:nextFocusLeft="@+id/dialog_button_rel3"
                    android:nextFocusRight="@+id/dialog_button_rel2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:id="@+id/button1_text_view"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text=""
                        android:maxLines="2"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_gravity="center"
                    android:id="@+id/dialog_button_rel2"
                    android:background="@drawable/round_corner_back_button"
                    android:focusable="true"
                    android:nextFocusLeft="@+id/dialog_button_rel1"
                    android:nextFocusRight="@+id/dialog_button_rel3"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:id="@+id/button2_text_view"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text=""
                        android:maxLines="2"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <com.github.ybq.android.spinkit.SpinKitView
            android:layout_gravity="center_horizontal"
            android:id="@+id/spin_kit"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:SpinKit_Color="@color/white"
            style="@style/SpinKitView.Large.Circle"/>
    </RelativeLayout>
</LinearLayout>
