<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_player"
    android:background="@color/colorPrimaryDark_OLD"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/m3u_import_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="M3U Playlists"
                android:fontFamily="@font/product_sans_bold"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/add_button"
                android:background="@drawable/round_corner_movie_detail_circle"
                android:focusable="true"
                android:nextFocusDown="@+id/recyclerview"
                android:clickable="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/image_plus_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_add"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/extra_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your imports and our Extra Playlists will appear here "
            android:fontFamily="@font/product_sans_egular"
            android:textAlignment="center"/>
        <View
            android:layout_gravity="center"
            android:background="@color/accent"
            android:focusable="false"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:background="@color/transparent"
            android:nextFocusUp="@+id/add_button"
            android:nextFocusDown="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/bannerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
</RelativeLayout>
