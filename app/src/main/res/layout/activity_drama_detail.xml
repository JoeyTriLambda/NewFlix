<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/activity_anime_detail"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp">
                        <androidx.cardview.widget.CardView
                            android:clickable="false"
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            app:cardBackgroundColor="@color/colorPrimaryDarklight"
                            app:cardCornerRadius="10dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/poster"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_movie"
                                android:transitionName="poster_image"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginLeft="15dp">
                            <TextView
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Dragon Ball Super 2015"
                                android:maxLines="1"
                                android:fontFamily="@font/product_sans_bold"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp">
                                <TextView
                                    android:id="@+id/anime_year_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="2023"
                                    android:textAlignment="textStart"/>
                            </LinearLayout>
                            <TextView
                                android:textColor="@color/accent"
                                android:id="@+id/last_watched_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="textStart"/>
                            <TextView
                                android:ellipsize="end"
                                android:id="@+id/plot"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:text="Set just after the events of the Buu Saga of Dragon Ball Z, a deadly threat awakens once more. People lived in peace without knowing who the true heroes were during the devastating battle against Majin Buu. The powerful Dragon Balls have prevented any permanent"
                                android:maxLines="5"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <View
                android:layout_gravity="center"
                android:background="@color/accent"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/poster2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/loader_view"
                    android:visibility="visible"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:indeterminate="true"
                    android:layout_centerInParent="true"
                    style="@style/SpinKitView.Large.Circle"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/linear_layout_episodes"
                        android:background="@drawable/selector_focus_settings"
                        android:focusable="true"
                        android:visibility="gone"
                        android:nextFocusUp="@+id/listview"
                        android:nextFocusDown="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <Spinner
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#222222"
                            android:id="@+id/spinner_servers"
                            android:focusable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="10dp"
                        android:gravity="center_horizontal"
                        android:focusable="false"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="if an episodes won&apos;t play on a given source, switch to the next Source from the list above"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:gravity="center"
                        android:id="@+id/listview_"
                        android:paddingBottom="50dp"
                        android:focusable="true"
                        android:nextFocusUp="@+id/linear_layout_episodes"
                        android:nextFocusDown="@+id/linear_layout_episodes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
                <ImageButton
                    android:id="@+id/play_single_media_button"
                    android:background="@drawable/selector_image_button_anime"
                    android:focusable="true"
                    android:visibility="gone"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_play_circle_filled_anime_2"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"/>
                <Button
                    android:id="@+id/reload_episodes"
                    android:visibility="gone"
                    android:layout_width="1dp"
                    android:layout_height="1dp"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/add_favorites"
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/bannerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#00ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
</FrameLayout>
