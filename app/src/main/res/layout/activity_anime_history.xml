<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/ic_history_white"/>
            <TextView
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="History"
                android:fontFamily="@font/product_sans_bold"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <RelativeLayout
                android:id="@+id/anime_favorites"
                android:background="@drawable/round_corner_movie_detail_rect_button"
                android:focusable="true"
                android:nextFocusDown="@+id/recyclerview_categories"
                android:clickable="true"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/anime_fav_textview"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Clear"/>
                    <ImageView
                        android:id="@+id/anime_fav_textview_button_imageview"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_action_clear"
                        android:layout_centerInParent="true"
                        app:tint="@color/black"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_gravity="center"
            android:background="@color/accent"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"/>
        <com.malinskiy.superrecyclerview.SuperRecyclerView
            android:id="@+id/recyclerview"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            app:layout_empty="@layout/empty_page_anime_history"
            app:mainLayoutId="@layout/layout_recyclerview_verticalscroll"
            app:recyclerClipToPadding="false"
            app:scrollbarStyle="insideInset"/>
    </LinearLayout>
</RelativeLayout>
