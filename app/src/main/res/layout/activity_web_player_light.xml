<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_view_web_player"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/background_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/background_image_web"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <FrameLayout
            android:background="@drawable/gradient_cicular_details"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"/>
    </RelativeLayout>
    <flix.com.vision.helpers.CursorLayout
        android:id="@+id/cursorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <org.adblockplus.libadblockplus.android.webview.AdblockWebView
            android:id="@+id/webview"
            android:background="@color/black"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"/>
    </flix.com.vision.helpers.CursorLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/progress_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.github.ybq.android.spinkit.SpinKitView
            android:layout_gravity="center_horizontal"
            android:id="@+id/spin_kit"
            android:visibility="visible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:SpinKit_Color="@color/accent"
            style="@style/SpinKitView.Large.Circle"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/mouse_pointer"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/mouse_imageview"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/movie_title_container"
        android:background="@drawable/background_player_watermark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="95dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/poster_image"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/movie_title_web_text"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="8sp"
                    android:id="@+id/undertitle_episode"
                    android:focusable="false"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:textSize="8sp"
                    android:textColor="@color/accent"
                    android:layout_gravity="center"
                    android:id="@+id/text_view_rating"
                    android:background="@drawable/round_corner_rating"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:text="12"
                    android:maxLines="1"
                    android:fontFamily="@font/product_sans_bold"/>
                <TextView
                    android:textSize="10sp"
                    android:id="@+id/undertitle"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/water_mark_view"
        android:background="@color/black"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <TextClock
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/clock"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_alignParentLeft="true"/>
    <TextClock
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/clock_2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
