<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_player"
    android:background="@color/mocie_item_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="8dp">
            <TextView
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/adult_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Favorites"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/filter_button"
                android:background="@drawable/round_corner_back_button"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:text="Show All"
                android:drawableLeft="@drawable/ic_expand"
                android:drawablePadding="22dp"
                android:fontFamily="@font/product_sans_bold"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/sort_button"
                android:background="@drawable/round_corner_back_button"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:text="by Date"
                android:drawableLeft="@drawable/ic_sort_dark"
                android:drawablePadding="22dp"
                android:fontFamily="@font/product_sans_bold"/>
        </LinearLayout>
        <com.malinskiy.superrecyclerview.SuperRecyclerView
            android:id="@+id/recyclerview_favorites"
            android:scrollbars="none"
            android:nextFocusUp="@+id/search_button_adult"
            android:descendantFocusability="afterDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            app:layout_moreProgress="@layout/view_more_progress"
            app:mainLayoutId="@layout/layout_recyclerview_verticalscroll"
            app:recyclerClipToPadding="false"
            app:scrollbarStyle="insideInset"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:indeterminate="true"
            android:layout_centerInParent="true"/>
    </LinearLayout>
</RelativeLayout>
