<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_relative_view"
    android:background="#263984"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <RelativeLayout
            android:id="@+id/button_search_mic"
            android:background="@drawable/round_corner_search_activity_circle"
            android:focusable="true"
            android:nextFocusDown="@+id/recycler_view_letters"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/mic_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/ic_action_mic"
                android:layout_centerInParent="true"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/round_corner_search_activity"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_search"/>
            <TextView
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:id="@+id/query_text_view"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Search by title or people"
                android:fontFamily="@font/product_sans_egular"/>
        </LinearLayout>
        <com.github.ybq.android.spinkit.SpinKitView
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:id="@+id/loader"
            android:visibility="visible"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:indeterminate="true"
            app:SpinKit_Color="@color/white"
            style="@style/SpinKitView.Large.Circle"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:id="@+id/button_blank_space"
                    android:background="@drawable/round_corner_search_activity_clickable"
                    android:focusable="true"
                    android:nextFocusUp="@+id/button_search_mic"
                    android:nextFocusDown="@+id/recycler_view_letters"
                    android:clickable="true"
                    android:layout_width="130dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/space_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_space_bar"
                        android:scaleType="fitCenter"
                        android:layout_centerInParent="true"
                        android:scaleX="2"/>
                </RelativeLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <RelativeLayout
                    android:id="@+id/button_back_space"
                    android:background="@drawable/round_corner_search_activity_clickable"
                    android:focusable="true"
                    android:nextFocusUp="@+id/button_search_mic"
                    android:clickable="true"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:id="@+id/back_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_back_space"
                        android:scaleType="fitCenter"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/round_corner_search_activity_keyboard"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_letters"
                    android:background="@color/transparent"
                    android:nextFocusUp="@+id/button_blank_space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
                <View
                    android:background="#3dffffff"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_letters_numeric"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/clear_button"
                android:background="@drawable/round_corner_search_activity_clickable"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:textSize="15sp"
                    android:gravity="center"
                    android:id="@+id/clear_text_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CLEAR"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/product_sans_egular"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:textSize="16sp"
                android:id="@+id/discover_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popular Searches on FlixVision"
                android:fontFamily="@font/product_sans_egular"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_results"
                android:nextFocusUp="@+id/button_search_mic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
