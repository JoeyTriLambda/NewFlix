<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_player"
    android:background="@color/mocie_item_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="8dp">
            <TextView
                android:textSize="30sp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:id="@+id/adult_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Loading..."
                android:maxLines="1"
                android:maxLength="20"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/settings_button_adult"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:nextFocusDown="@+id/recyclerview_categories"
                android:clickable="true"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_action_settings"
                        android:layout_centerInParent="true"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/search_button_adult"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:nextFocusDown="@+id/recyclerview_categories"
                android:clickable="true"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_action_search_white"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/tv_favorites_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_tv_favorites"
                android:background="@null"
                android:focusable="true"
                android:visibility="visible"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_gravity="center"
                android:background="@color/accent"
                android:layout_width="400dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_categories"
            android:scrollbars="none"
            android:nextFocusUp="@+id/search_button_adult"
            android:descendantFocusability="afterDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            app:layout_empty="@layout/empy_view_main_recycler_view"
            app:layout_moreProgress="@layout/view_more_progress"
            app:mainLayoutId="@layout/layout_recyclerview_verticalscroll"
            app:recyclerClipToPadding="false"
            app:scrollbarStyle="insideInset"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <com.github.ybq.android.spinkit.SpinKitView
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:SpinKit_Color="@color/white"
            style="@style/SpinKitView.Large.Circle"/>
        <TextView
            android:id="@+id/loader_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textAlignment="center"/>
    </LinearLayout>
</RelativeLayout>
