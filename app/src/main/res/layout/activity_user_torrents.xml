<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_player"
    android:background="@color/mocie_item_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">
                <TextView
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Torrents"
                    android:fontFamily="@font/product_sans_bold"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/rd_button"
                    android:background="@drawable/round_corner_back_button"
                    android:focusable="true"
                    android:nextFocusRight="@+id/series_button"
                    android:nextFocusUp="@+id/toolbar"
                    android:nextFocusDown="@+id/recyclerview_cast"
                    android:clickable="true"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/label_movies_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Real-Debrid"/>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/prem_button"
                    android:background="@drawable/round_corner_back_button"
                    android:focusable="true"
                    android:nextFocusLeft="@+id/movies_button"
                    android:nextFocusUp="@+id/toolbar"
                    android:nextFocusDown="@+id/recyclerview_cast"
                    android:clickable="true"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/label_series_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Premiumize"/>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/alldebrid_button"
                    android:background="@drawable/round_corner_back_button"
                    android:focusable="true"
                    android:nextFocusLeft="@+id/movies_button"
                    android:nextFocusUp="@+id/toolbar"
                    android:nextFocusDown="@+id/recyclerview_cast"
                    android:clickable="true"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/label_alldebrid_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AllDebrid"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_cast"
            android:scrollbars="none"
            android:nextFocusUp="@+id/toolbar"
            android:nextFocusDown="@+id/recyclerview_cast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:mainLayoutId="@layout/layout_recyclerview_verticalscroll"
            app:recyclerClipToPadding="false"
            app:scrollbarStyle="insideInset"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:indeterminate="true"
            android:layout_centerInParent="true"/>
    </LinearLayout>
</RelativeLayout>
