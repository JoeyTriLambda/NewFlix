<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/container"
            android:background="@color/black"
            android:nextFocusLeft="@+id/navBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextClock
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/clock_main"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="06:20"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <androidx.leanback.widget.BrowseFrameLayout
        android:id="@+id/navBar"
        android:background="@color/black"
        android:nextFocusRight="@+id/container"
        android:layout_width="56dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <TextView
                android:textColor="@color/menu_item_text_color"
                android:gravity="center_vertical"
                android:id="@+id/button_search"
                android:background="@drawable/selector_menu"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:text="Search"
                android:drawableLeft="@drawable/ic_action_search"
                android:drawablePadding="22dp"/>
            <TextView
                android:textColor="@color/menu_item_text_color"
                android:gravity="center_vertical"
                android:id="@+id/button_home"
                android:background="@drawable/selector_menu"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:text="Home"
                android:drawableLeft="@drawable/ic_home"
                android:drawablePadding="22dp"/>
            <TextView
                android:textColor="@color/menu_item_text_color"
                android:gravity="center_vertical"
                android:id="@+id/button_movies"
                android:background="@drawable/selector_menu"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:text="Movies"
                android:drawableLeft="@drawable/ic_movie"
                android:drawablePadding="22dp"/>
            <TextView
                android:textColor="@color/menu_item_text_color"
                android:gravity="center_vertical"
                android:id="@+id/button_tv_series"
                android:background="@drawable/selector_menu"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:text="TV Shows"
                android:drawableLeft="@drawable/ic_tv_shows"
                android:drawablePadding="22dp"/>
            <TextView
                android:textColor="@color/menu_item_text_color"
                android:gravity="center_vertical"
                android:id="@+id/button_genres"
                android:background="@drawable/selector_menu"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:text="Filter"
                android:drawableLeft="@drawable/ic_filter"
                android:drawablePadding="22dp"/>
            <TextView
                android:textColor="@color/menu_item_text_color"
                android:gravity="center_vertical"
                android:id="@+id/button_anime"
                android:background="@drawable/selector_menu"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:text="Anime"
                android:drawableLeft="@drawable/ic_anime"
                android:drawablePadding="22dp"/>
            <TextView
                android:textColor="@color/menu_item_text_color"
                android:gravity="center_vertical"
                android:id="@+id/button_adult"
                android:background="@drawable/selector_menu"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:text="AdultZone"
                android:drawableLeft="@drawable/ic_adult"
                android:drawablePadding="22dp"/>
            <TextView
                android:textColor="@color/menu_item_text_color"
                android:gravity="center_vertical"
                android:id="@+id/button_live_tv"
                android:background="@drawable/selector_menu"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:text="Live TV"
                android:drawableLeft="@drawable/ic_live_tv"
                android:drawablePadding="22dp"/>
            <TextView
                android:textColor="@color/menu_item_text_color"
                android:gravity="center_vertical"
                android:id="@+id/button_favorites"
                android:background="@drawable/selector_menu"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:text="Favorites"
                android:drawableLeft="@drawable/ic_bookmark"
                android:drawablePadding="22dp"/>
            <TextView
                android:textColor="@color/menu_item_text_color"
                android:gravity="center_vertical"
                android:id="@+id/button_settings"
                android:background="@drawable/selector_menu"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:text="Settings"
                android:drawableLeft="@drawable/ic_settings"
                android:drawablePadding="22dp"/>
            <TextView
                android:textColor="@color/menu_item_text_color"
                android:gravity="center_vertical"
                android:id="@+id/button_more"
                android:background="@drawable/selector_menu"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:text="More"
                android:drawableLeft="@drawable/ic_more"
                android:drawablePadding="22dp"/>
            <View
                android:id="@+id/padding_view"
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_height="20dp"/>
            <TextView
                android:textColor="@color/menu_item_text_color"
                android:gravity="center_vertical"
                android:id="@+id/button_exit"
                android:background="@drawable/selector_menu"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:text="Exit"
                android:drawableLeft="@drawable/ic_exit"
                android:drawablePadding="22dp"/>
        </LinearLayout>
    </androidx.leanback.widget.BrowseFrameLayout>
    <com.github.ybq.android.spinkit.SpinKitView
        android:layout_gravity="center"
        android:id="@+id/loader_circle"
        android:visibility="visible"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:indeterminate="true"
        app:SpinKit_Color="@color/white"
        style="@style/SpinKitView.Large.Circle"/>
</FrameLayout>
