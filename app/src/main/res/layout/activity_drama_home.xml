<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_dark"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_drama"/>
            <TextView
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Asian Drama"
                android:fontFamily="@font/product_sans_bold"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/anime_favorites"
                android:background="@drawable/round_corner_movie_detail_rect_button"
                android:focusable="true"
                android:nextFocusDown="@+id/recyclerview_categories"
                android:clickable="true"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/anime_fav_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Favorites"/>
                    <ImageView
                        android:id="@+id/anime_fav_textview_button_imageview"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_bookmark"
                        android:layout_centerInParent="true"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/anime_history_button"
                android:background="@drawable/round_corner_movie_detail_rect_button"
                android:focusable="true"
                android:nextFocusDown="@+id/recyclerview_categories"
                android:clickable="true"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/progress_anime_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="History"/>
                    <ImageView
                        android:id="@+id/progress_anime_button_image"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_history_white"
                        android:layout_centerInParent="true"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/search_anime_button"
                android:background="@drawable/round_corner_movie_detail_rect_button"
                android:focusable="true"
                android:nextFocusDown="@+id/recyclerview_categories"
                android:clickable="true"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/search_anime__textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Search"/>
                    <ImageView
                        android:id="@+id/search_anime_button_imageview"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_action_search"
                        android:layout_centerInParent="true"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/filter_anime_button"
                android:background="@drawable/round_corner_movie_detail_rect_button"
                android:focusable="true"
                android:nextFocusDown="@+id/recyclerview_categories"
                android:clickable="true"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/filter_anime__textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Filter"/>
                    <ImageView
                        android:id="@+id/filter_anime_button_imageview"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_filter"
                        android:layout_centerInParent="true"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_gravity="center"
        android:background="@color/accent"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"/>
    <ScrollView
        android:id="@+id/scrollview_drama_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/continue_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Continue Watching"
                android:fontFamily="@font/product_sans_bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_continue"
                android:background="@null"
                android:focusable="true"
                android:visibility="visible"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <TextView
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Drama Ongoing"
                android:fontFamily="@font/product_sans_bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_dramma_ongoing"
                android:background="@null"
                android:focusable="true"
                android:visibility="visible"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <TextView
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Drama Completed"
                android:fontFamily="@font/product_sans_bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_dramma_completed"
                android:background="@null"
                android:focusable="true"
                android:visibility="visible"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <TextView
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Romance"
                android:fontFamily="@font/product_sans_bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_romance"
                android:background="@null"
                android:focusable="true"
                android:visibility="visible"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <TextView
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Action"
                android:fontFamily="@font/product_sans_bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_action"
                android:background="@null"
                android:focusable="true"
                android:visibility="visible"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <TextView
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Mystery"
                android:fontFamily="@font/product_sans_bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_mystery"
                android:background="@null"
                android:focusable="true"
                android:visibility="visible"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <TextView
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Variety Show"
                android:fontFamily="@font/product_sans_bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_variety_show"
                android:background="@null"
                android:focusable="true"
                android:visibility="visible"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
