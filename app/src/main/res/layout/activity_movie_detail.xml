<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_layout_background"
    android:background="@drawable/gradient_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/main_view"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <RelativeLayout
                android:id="@+id/poster_container"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">
                <com.bosphere.fadingedgelayout.FadingEdgeLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ads:fel_edge="bottom|top"
                    ads:fel_size_bottom="90dp"
                    ads:fel_size_left="40dp"
                    ads:fel_size_right="40dp"
                    ads:fel_size_top="80dp">
                    <ImageView
                        android:id="@+id/big_poster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.bosphere.fadingedgelayout.FadingEdgeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/scrolview_main"
            android:background="#00000000"
            android:focusable="true"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/activity_movie_detail"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="320dp">
                    <LinearLayout
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp">
                        <RelativeLayout
                            android:gravity="bottom|left"
                            android:layout_gravity="bottom|left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <me.grantland.widget.AutofitTextView
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:id="@+id/movie_title"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Ttanic return"
                                android:maxLines="1"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/accent"
                                android:gravity="center"
                                android:id="@+id/text_view_rating"
                                android:background="@drawable/round_corner_rating"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="12"
                                android:maxLines="1"
                                android:fontFamily="@font/product_sans_bold"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:id="@+id/info"
                                android:focusable="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="180dp"
                                android:text="2020 | 1h 43 | PG-13"
                                android:maxLines="1"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/accent"
                                android:gravity="center"
                                android:id="@+id/type_text_view"
                                android:focusable="false"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="1dp"
                                android:maxLines="1"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/accent"
                                android:gravity="center"
                                android:id="@+id/type_text_providers"
                                android:focusable="false"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:text="Â· Available in HD"
                                android:maxLines="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/movie_lin"
                        android:background="@drawable/round_corner_back_button_static"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:focusable="true"
                            android:layout_width="150dp"
                            android:layout_height="45dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/button_play_image"
                                android:focusable="false"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/baseline_play_arrow_black_36"
                                android:alpha="0.7"/>
                            <TextView
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:id="@+id/play_button_label"
                                android:focusable="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Play"
                                android:maxLines="1"/>
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:gravity="center"
                        android:id="@+id/trailer_lin"
                        android:background="@drawable/round_corner_back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:background="@color/transparent"
                            android:layout_width="140dp"
                            android:layout_height="45dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/button_trailer_image"
                                android:focusable="false"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/baseline_video_library_white_36"
                                android:alpha="0.7"
                                ads:tint="@color/black"/>
                            <TextView
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:id="@+id/trailer_button_label"
                                android:focusable="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Trailer"
                                android:maxLines="1"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/favorites_label"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <io.github.giangpham96.expandable_textview.ExpandableTextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:id="@+id/plot"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text=""
                    ads:expandAction="More"
                    ads:expandActionColor="@color/accent"
                    ads:limitedMaxLines="3"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:focusable="false"
                        android:layout_width="90dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:id="@+id/director_label_textview"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DIRECTOR"/>
                        <TextView
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:id="@+id/writers_label"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="WRITTEN BY"/>
                        <TextView
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:id="@+id/season_label_textview"
                            android:focusable="false"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="CREATED BY"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="13sp"
                            android:id="@+id/director_textview"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"/>
                        <TextView
                            android:textSize="13sp"
                            android:id="@+id/cast_textview"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:maxLines="1"/>
                        <TextView
                            android:textSize="13sp"
                            android:id="@+id/total_seasons"
                            android:focusable="false"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/collection_label"
                    android:focusable="false"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_collection"
                    android:focusable="true"
                    android:visibility="gone"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/cast_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="CAST"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_cast"
                    android:background="@null"
                    android:visibility="visible"
                    android:scrollbars="none"
                    android:nextFocusUp="@+id/movie_lin"
                    android:nextFocusDown="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/from_director_textview"
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_from_director"
                    android:focusable="true"
                    android:visibility="visible"
                    android:scrollbars="none"
                    android:nextFocusUp="@+id/recyclerview_cast"
                    android:nextFocusDown="@+id/recyclerview_similar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/more_from_textview"
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_from_cast"
                    android:focusable="true"
                    android:visibility="visible"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/similar_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="YOU MAY ALSO LIKE"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_similar"
                    android:background="@null"
                    android:visibility="visible"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"/>
                <RelativeLayout
                    android:id="@+id/add_favorites"
                    android:visibility="gone"
                    android:layout_width="1dp"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:id="@+id/imdb_but"
                    android:visibility="gone"
                    android:layout_width="1dp"
                    android:layout_height="1dp"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:focusable="true"
            android:nextFocusLeft="@+id/movie_lin"
            android:nextFocusRight="@+id/movie_lin"
            android:nextFocusDown="@+id/movie_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            ads:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            ads:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
        <flix.com.vision.materialsearchview.MaterialSearchView
            android:id="@+id/search_view"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MaterialSearchViewStyle"/>
    </FrameLayout>
</FrameLayout>
