<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridView
        android:gravity="center"
        android:id="@+id/listview"
        android:paddingBottom="50dp"
        android:focusable="true"
        android:nextFocusUp="@+id/linear_layout_episodes"
        android:nextFocusDown="@+id/linear_layout_episodes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:listSelector="@color/colorAccent"
        android:horizontalSpacing="3dp"
        android:verticalSpacing="3dp"
        android:stretchMode="columnWidth"
        android:columnWidth="55dp"
        android:numColumns="auto_fit"
        android:choiceMode="singleChoice"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linear_layout_episodes"
        android:background="@drawable/selector_focus_settings"
        android:focusable="true"
        android:nextFocusUp="@+id/listview"
        android:nextFocusDown="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:id="@+id/spinner_servers"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
    </LinearLayout>
</LinearLayout>
