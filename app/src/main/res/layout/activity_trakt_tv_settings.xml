<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_act"
    android:background="@color/color_accent_pressed"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/trakt_logo_3"/>
            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Trakt.Tv Settings"/>
        </LinearLayout>
        <View
            android:background="@color/gray_50"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <FrameLayout
            android:background="@drawable/selector_focus_settings"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/setting_check_me_in"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:focusable="true"
                android:nextFocusDown="@+id/setting_facebook"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="85">
                    <TextView
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Check me In"
                        android:maxLines="1"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Automatically Check You In when You start Watching a Movie or Show and remove the CheckIn when You&apos;re finished"
                        android:maxLines="3"/>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15">
                    <CheckBox
                        android:layout_gravity="center"
                        android:id="@+id/switch_check_me_in"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
        <View
            android:background="@color/gray_50"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="14dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/s1"/>
        <FrameLayout
            android:background="@drawable/selector_focus_settings"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/setting_facebook"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:focusable="true"
                android:nextFocusUp="@+id/setting_check_me_in"
                android:nextFocusDown="@+id/setting_twitter"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="85">
                    <TextView
                        android:textSize="17sp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Facebook"/>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15">
                    <CheckBox
                        android:layout_gravity="center"
                        android:id="@+id/switch_facebook"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:background="@drawable/selector_focus_settings"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/setting_twitter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:focusable="true"
                android:nextFocusUp="@+id/setting_facebook"
                android:nextFocusDown="@+id/setting_tumblr"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="85">
                    <TextView
                        android:textSize="17sp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Twitter"/>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15">
                    <CheckBox
                        android:layout_gravity="center"
                        android:id="@+id/switch_twitter"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:background="@drawable/selector_focus_settings"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/setting_tumblr"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:focusable="true"
                android:nextFocusUp="@+id/setting_twitter"
                android:nextFocusDown="@+id/setting_add_favorite"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="85">
                    <TextView
                        android:textSize="17sp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Tumblr"/>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15">
                    <CheckBox
                        android:layout_gravity="center"
                        android:id="@+id/switch_tumblr"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
        <View
            android:background="@color/gray_50"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <FrameLayout
            android:background="@drawable/selector_focus_settings"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/setting_add_favorite"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:focusable="true"
                android:nextFocusUp="@+id/setting_tumblr"
                android:nextFocusDown="@+id/setting_add_favorite_shows"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="85">
                    <TextView
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Add Favorited Movies to Collection"
                        android:maxLines="1"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Automatically add Movies You favorite to your Collection"
                        android:maxLines="3"/>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15">
                    <CheckBox
                        android:layout_gravity="center"
                        android:id="@+id/switch_add_favorite"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
        <View
            android:background="@color/gray_50"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <FrameLayout
            android:background="@drawable/selector_focus_settings"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/setting_add_favorite_shows"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:focusable="true"
                android:nextFocusUp="@+id/setting_add_favorite"
                android:nextFocusDown="@+id/setting_add_watched_list"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="85">
                    <TextView
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Add Favorited Shows to Collection"
                        android:maxLines="1"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Automatically add Shows You favorite to your Collection. \10CAUTION: All Episodes will be added to your Collection"
                        android:maxLines="4"/>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15">
                    <CheckBox
                        android:layout_gravity="center"
                        android:id="@+id/switch_add_favorite_shows"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
        <View
            android:background="@color/gray_50"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <FrameLayout
            android:background="@drawable/selector_focus_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/setting_add_watched_list"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:focusable="true"
                android:nextFocusUp="@+id/setting_add_favorite_shows"
                android:nextFocusDown="@+id/sign_out"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="85">
                    <TextView
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Sync Watched"
                        android:maxLines="1"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Automatically add Movies and Shows You watch to your Watched list. Remember that Movies You Check In are atomatically added to your Wacthed list so having both settings checked would redundant"
                        android:maxLines="8"/>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15">
                    <CheckBox
                        android:layout_gravity="center"
                        android:id="@+id/switch_add_watched_list"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
        <View
            android:background="@color/gray_50"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/sign_out"
            android:background="@drawable/round_corner_back_button"
            android:focusable="true"
            android:nextFocusRight="@+id/series_button"
            android:nextFocusUp="@+id/setting_add_watched_list"
            android:nextFocusDown="@+id/recyclerview"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/label_signout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIGN OUT"/>
        </RelativeLayout>
        <View
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>
</ScrollView>
